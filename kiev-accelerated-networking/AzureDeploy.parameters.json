{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
    "parameters": {
    "vmName": {
       "type": "string",
       "metadata": {
          "description": "Name of VM-Series FW in the Azure portal"
       },
       "defaultValue": "fw-out-001-nva-exp-westus"
    },
    "storageAccountName": {
      "type": "string",
      "defaultValue" : "storfwout31nvaexpwestus",
      "metadata": {
        "description": "Name of the existing storage account used to store the VM's disks"
      }
    },
    "storageAccountExistingRG": {
       "type": "string",
       "defaultValue" : "RG-NetSec-Exploratorium",
       "metadata": {
          "description": "Storage Accounts Resource Group location."
       }
    },
    "fwAvSet": {
       "type": "string",
       "metadata": {
          "description": "Availability Set name for Firewalls"
       },
       "defaultValue": "aset-fw-out-001-dev-nva-exp-westus"
    },
    "vmSize": {
       "type": "string",
       "allowedValues": [
          "Standard_D3",
          "Standard_D4",
          "Standard_D3_v2",
          "Standard_D4_v2",
          "Standard_DS3_v2",
          "Standard_DS4_v2"
       ],
       "metadata": {
          "description": "Azure VM size for VM-Series"
       },
       "defaultValue": "Standard_D3_v2"
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Virtual Network (VNET)"
      },
      "defaultValue": "VNET-USWEST-Dev-Exp"
    },
    "virtualNetworkAddressPrefix": {
      "type": "string",
      "defaultValue": "10.116.241.0/24",
      "metadata": {
        "description": "Virtual network address CIDR"
      }
    },
    "virtualNetworkExistingRGName": {
      "type": "string",
      "defaultValue": "RG-NetSec-Exploratorium",
      "metadata": {
        "description": "Name of resource group of existing VNET (if applicable)"
      }
    },
    "subnet0Name": {
      "type": "string",
      "defaultValue": "Network",
      "metadata": {
        "description": "Subnet for Management"
      }
    },
    "subnet1Name": {
      "type": "string",
      "defaultValue": "NetSec-FW-Untrust",
      "metadata": {
        "description": "Subnet for Untrust"
      }
    },
    "subnet2Name": {
      "type": "string",
      "defaultValue": "NetSec-FW-Trust",
      "metadata": {
        "description": "Subnet for Trust"
      }
    },
    "subnet3Name": {
      "type": "string",
      "defaultValue": "NetSec-FW-DMZ",
      "metadata": {
        "description": "Subnet for DMZ"
      }
    },
    "subnet0Prefix": {
      "type": "string",
      "defaultValue": "10.116.241.0/26",
      "metadata": {
        "description": "Mgmt subnet CIDR"
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.116.241.64/27",
      "metadata": {
        "description": "Untrust subnet CIDR"
      }
    },
    "subnet2Prefix": {
      "type": "string",
      "defaultValue": "10.116.241.128/27",
      "metadata": {
        "description": "Trust subnet CIDR"
      }
    },
    "subnet3Prefix": {
      "type": "string",
      "defaultValue": "10.116.241.192/27",
      "metadata": {
        "description": "DMZ subnet CIDR"
      }
    },
    "subnet0Address": {
      "type": "string",
      "defaultValue": "10.116.241.4",
      "metadata": {
        "description": "Mgmt subnet start address"
      }
    },
    "subnet1Address": {
      "type": "string",
      "defaultValue": "10.116.241.68",
      "metadata": {
        "description": "Untrust subnet start address"
      }
    },
    "subnet2Address": {
      "type": "string",
      "defaultValue": "10.116.241.132",
      "metadata": {
        "description": "Trust subnet start address"
      }
    },
    "subnet3Address": {
      "type": "string",
      "defaultValue": "10.116.241.196",
      "metadata": {
        "description": "DMZ subnet start address"
      }
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "fwnvaexpadmin",
      "metadata": {
        "description": "Username of the administrator account of VM-Series"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Password for the administrator account of VM-Series"
      }
    },
    "publicIPAddressName": {
      "type": "string",
      "defaultValue": "fw-mgmtpip-out-007-dev-nva-bi-westus",
      "metadata": {
        "description": "Name of FW1 MGMT Public Address"
      }
    },
    "imageVersion": {
      "type": "string",
      "metadata": {
        "description": "PAN OS Version"
      }
    },
    "imageSku": {
      "type": "string",
      "metadata": {
        "description": "Firewall License Model"
      }
    },
    "nsgName": {
      "type": "string",
      "defaultValue": "NSG-USWest-Dev-PaaS-Exploratorium",
      "metadata": {
        "description": "Name of existing Network Security Group for MGMT FW interface"
      }
    }

  }
}
